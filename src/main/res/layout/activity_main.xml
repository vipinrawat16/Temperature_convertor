<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="10dp"
        android:text="Temperature Converter"
        android:textColor="#3E3D31"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinner01"
        android:background="@drawable/baseline_down"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/textView"
        android:spinnerMode="dropdown"
        android:layout_marginStart="2dp"
        android:layout_marginTop="82dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="273dp"
        android:background="@drawable/baseline_down"
        android:text="TextView" />

    <Spinner
        android:id="@+id/spinner02"
        android:background="@drawable/baseline_down"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner01"
        android:layout_marginTop="205dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="275dp"
        android:background="@drawable/baseline_down"
        android:text="TextView" />

    <EditText
        android:id="@+id/solution_tv"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/result_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="73dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="384dp"
        android:layout_height="53dp"
        android:layout_above="@id/button_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="34dp"
        android:gravity="end"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#5C5E675E"
        android:id="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_7"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="7"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_8"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="8"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_9"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="9"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back"
                style="@style/digitbutton"
                android:onClick="onBackClick"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#151414"
                app:icon="@drawable/baseline_backspace_25"
                app:iconTint="#0CD114"
                android:textSize="35dp"
                app:cornerRadius="360dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_4"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="4"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_5"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="5"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_6"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="6"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/operatorbutton"
                android:onClick="onClearClick"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#151414"
                android:text="C"
                android:textColor="#E8594F"
                android:textSize="35dp"
                app:cornerRadius="360dp"
                tools:ignore="MissingClass" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_1"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_2"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="2"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_3"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="3"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/up"
                style="@style/digitbutton"
                android:onClick="onupButton"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#151414"
                app:icon="@drawable/baseline_arrow_upward_24"
                app:iconTint="#0CD114"
                android:textSize="35dp"
                app:cornerRadius="360dp"
                tools:ignore="DuplicateIds" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">

            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/operatorbutton"
                android:textSize="35dp"
                android:textColor="#39E441"
                android:layout_margin="12dp"
                android:id="@+id/button_minus"
                android:onClick="onOperatorClick"
                android:backgroundTint="#151414"
                android:text="-"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_0"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="0"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="76dp"
                android:layout_height="72dp"
                app:cornerRadius="360dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/button_dot"
                android:onClick="onDigitClick"
                android:backgroundTint="#151414"
                android:text="."/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/down"
                style="@style/digitbutton"
                android:onClick="ondownButton"
                android:layout_width="76dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#151414"
                app:icon="@drawable/baseline_arrow_downward_24"
                app:iconTint="#0CD114"
                android:textSize="35dp"
                app:cornerRadius="360dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>